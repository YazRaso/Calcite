responses:
  utter_greet:
    - text: "Hey there!"
    - text: "Hi! How can I help you today?"
    - text: "Hello! How can I assist you with your transactions today?"
  utter_goodbye:
    - text: "Bye now"
    - text: "See you later!"
    - text: "Goodbye! If you need help later, just ask."
  utter_ask_date:
    - text: "What date is the transaction?"
    - text: "Please provide the date of the transaction."
  utter_ask_amount:
    - text: "How much is the transaction?"
    - text: "Please provide the amount of the transaction."
  utter_ask_currency:
    - text: "What currency is used?"
    - text: "Please specify the currency for the transaction."    
  utter_ask_conversion_rate:
    - text: "What is the conversion rate?"
    - text: "Please provide the conversion rate for the transaction."  
  utter_ask_file_path:
    - text: "Please provide the file path."
    - text: "What is the file path where the transaction is stored?"  
  utter_ask_reference_id:
    - text: "Please provide the reference ID."
    - text: "What is the reference ID for the transaction?"
  utter_confirm_transaction:
    - text: "Summary of the transaction: {amount} {currency} on {date} with conversion rate {conversion_rate}. Reference ID: {reference_id}. Is this correct?"
  utter_transaction_added:
    - text: "Transaction added successfully!"
    - text: "Your transaction has been recorded."
  utter_action_canceled:
    - text: "Action canceled. No changes made."
    - text: "The action has been canceled. No transactions were appended nor modified."
  utter_transaction_deleted:
    - text: "Transaction deleted successfully!"
    - text: "The transaction has been removed."
  utter_confirm_deletion:
    - text: "Are you sure you want to delete the transaction with reference ID {reference_id}?"
    - text: "Please confirm if you want to delete the transaction with reference ID {reference_id}."
      
intents:
  - add_transaction
  - delete_transaction
  - greet
  - goodbye
  - affirm
  - deny

actions:
  - add_transaction_form
  - delete_transaction_form
  - add_transaction
  - delete_transaction

entities:
  - amount_of_money # amount, currency
  - time # date
  - number # rate
  - file_path
  - reference_id

slots:
  amount_of_money:
    type: float
    mappings:
      - type: from_entity
        entity: amount_of_money
  time:
    type: text
    mappings:
      - type: from_entity
        entity: time
  number: 
    type: float
    mappings:
      - type: from_entity
        entity: number
  file_path:
    type: text
    mappings:
      - type: from_entity
        entity: file_path
  reference_id:
    type: text
    mappings:
      - type: from_entity
        entity: reference_id
forms:
  add_transaction_form:
    # if a slot is not filled, the system will prompt it for the slot
    required_slots:
    - date
    - amount
    - currency
    - conversion_rate
    - file_path
    - reference_id
  delete_transaction_form:
    required_slots:
      - file_path
      - reference_id
